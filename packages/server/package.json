{
  "name": "@collab-note/server",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "lint": "eslint \"src/**/*.ts\" --config ./.eslintrc.js --fix",
    "format": "prettier \"src/**/*.ts\" --write",
    "dev": "NODE_ENV=development nest start --watch",
    "start:pm2": "pnpm pm2 start ecosystem.config.js",
    "prisma:generate": "pnpm dlx prisma generate",
    "prisma:studio": "pnpm dlx prisma studio",
    "prisma:push": "pnpm dlx prisma db push",
    "test": "jest"
  },
  "dependencies": {
    "@collab-note/common": "workspace:*",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.3.9",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/websockets": "^9.3.9",
    "@prisma/client": "^4.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "helmet": "^6.0.1",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/node": "18.11.18",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "pm2": "^5.2.2",
    "prisma": "^4.11.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
